{
  "Logging": {
    "IncludeScopes": false,
    "LogOutputTemplate": "[{Timestamp:dd-MM-yyyy HH:mm:ss, fff}] {Level} {Properties} [CorrelationId:{CorrelationId}] [Machine: {MachineName}] {CallerType}:{MemberName} {Message}{NewLine}{Exception} {NewLine}",
    "Console": {
      "Enabled": true,
      "LogLevel": "Debug"
    },
    "Elastic": {
      "Enabled": true,
      "LogLevel": "Debug"
    }
  },
  "AppConfigurations": {
    "ApplicationIdentifier": "Carsties.GatewayService",
    "ApplicationEnvironment": "Development"
  },
  "Elasticsearch": {
    "Uri": "http://localhost:9200"
  },
  "IdentityGroupAccess": {
    "Authority": "http://localhost:5000",
    "Audience": "http://localhost:5000/resources"
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "catalogue-v1": {
        "ClusterId": "catalogue",
        "RateLimiterPolicy": "customPolicy",
        "Match": {
          "Path": "/catalogue/{**catch-all}",
          "Method": ["GET"],
          "Headers": [
            {
              "Name": "api-version",
              "Values": ["v1"],
              "Mode": "ExactHeader"
            }
          ]
        },
        "Transforms": [
          {
            "PathPattern": "api/v1/{**catch-all}"
          }
        ]
      },
      "catalogue-v2": {
        "ClusterId": "catalogue",
        "AuthorizationPolicy": "RequireScope",
        "Match": {
          "Path": "/catalogue/{**catch-all}",
          "Method": ["GET", "POST", "PUT", "DELETE"],
          "Headers": [
            {
              "Name": "api-version",
              "Values": ["v2"],
              "Mode": "ExactHeader"
            }
          ]
        },
        "Transforms": [
          {
            "PathPattern": "api/v2/{**catch-all}"
          }
        ]
      },
      "search-v1": {
        "ClusterId": "search",
        "Match": {
          "Path": "/search/{**catch-all}",
          "Method": ["GET"],
          "Headers": [
            {
              "Name": "api-version",
              "Values": ["v1"],
              "Mode": "ExactHeader"
            }
          ]
        },
        "Transforms": [
          {
            "PathPattern": "api/v1/{**catch-all}"
          }
        ]
      },
      "search-v2": {
        "ClusterId": "search",
        "Match": {
          "Path": "/search/{**catch-all}",
          "Method": ["GET", "PSOT", "PUT", "DELETE"],
          "Headers": [
            {
              "Name": "api-version",
              "Values": ["v2"],
              "Mode": "ExactHeader"
            }
          ]
        },
        "Transforms": [
          {
            "PathPattern": "api/v2/{**catch-all}"
          }
        ]
      },
      "user-v1": {
        "ClusterId": "user",
        "Match": {
          "Path": "/user/{**catch-all}",
          "Method": ["GET"],
          "Headers": [
            {
              "Name": "api-version",
              "Values": ["v1"],
              "Mode": "ExactHeader"
            }
          ]
        },
        "Transforms": [
          {
            "PathPattern": "api/v1/{**catch-all}"
          }
        ]
      },
      "user-v2": {
        "ClusterId": "user",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/user/{**catch-all}",
          "Method": ["GET", "POST", "PUT", "DELETE"],
          "Headers": [
            {
              "Name": "api-version",
              "Values": ["v2"],
              "Mode": "ExactHeader"
            }
          ]
        },
        "Transforms": [
          {
            "PathPattern": "api/v2/{**catch-all}"
          }
        ]
      }
    }
  }
}
