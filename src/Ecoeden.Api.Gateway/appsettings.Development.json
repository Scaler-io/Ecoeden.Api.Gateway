{
  "Logging": {
    "IncludeScopes": false,
    "LogOutputTemplate": "[{Timestamp:dd-MM-yyyy HH:mm:ss, fff}] {Level} {Properties} [CorrelationId:{CorrelationId}] [Machine: {MachineName}] {CallerType}:{MemberName} {Message}{NewLine}{Exception} {NewLine}",
    "Console": {
      "Enabled": true,
      "LogLevel": "Debug"
    },
    "Elastic": {
      "Enabled": true,
      "LogLevel": "Debug"
    }
  },
  "AppConfigurations": {
    "ApplicationIdentifier": "Carsties.GatewayService",
    "ApplicationEnvironment": "Development"
  },
  "Elasticsearch": {
    "Uri": "http://localhost:9200"
  },
  "IdentityGroupAccess": {
    "Authority": "http://localhost:5000",
    "Audience": "http://localhost:5000/resources"
  },
  "ReverseProxy": {
    "Clusters": {
      "catalogue": {
        "Destinations": {
          "catalogueApi": {
            "Address": "http://localhost:5002"
          }
        }
      },
      "search": {
        "Destinations": {
          "searchApi": {
            "Address": "http://localhost:5003"
          }
        }
      },
      "user": {
        "Destinations": {
          "userApi": {
            "Address": "http://localhost:5001"
          }
        }
      },
      "inventory": {
        "Destinations": {
          "inventoryApi": {
            "Address":  "http://localhost:5004"
          }
        }
      }
    }
  }
}
